{
  "manifest_version": 2,
  "name": "Google Dork Builder+",
  "version": "0.8",
  "description": "Easily create your queries with google operators from the sidebar, by selecting text from the context menu or use exploit-db.com",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.exploit-db.com/google-hacking-database",
        "*://*.exploit-db.com/ghdb/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/logo16.png",
      "32": "icons/logo32.png"
    }
  },
  "sidebar_action": {
    "default_title": "Google Dork Builder+",
    "default_panel": "sidebar.html",
    "default_icon": {
      "16": "icons/logo16.png",
      "32": "icons/logo32.png"
    }
  },
  "permissions": [
    "contextMenus",
    "storage",
    "notifications"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{675d13f4-7c9e-40a7-bbd3-2c4f41723f70}"
    }
  }
}
